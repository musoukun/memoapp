{
	// IntelliSense を使用して利用可能な属性を学べます。
	// 既存の属性の説明をホバーして表示します。
	// 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387

	"version": "0.2.0",
	"configurations": [
		{
			"name": "Rails server (debug)",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceFolder}/backend",
			"useBundler": true, // If you use bundler, set this to true
			"program": "${workspaceFolder}/backend/bin/rdebug-ide",
			"args": ["--", "bin/rails", "server", "-p", "3000"],
			"env": {
				"RAILS_ENV": "development"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "RSpec - All",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceRoot}/backend",
			"program": "${workspaceRoot}/backend/bin/rspec",
			"args": ["-I", "${workspaceRoot}/backend"]
		}
	]
}
