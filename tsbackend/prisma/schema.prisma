generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
  // url      = "postgresql://waros:postgres@127.0.0.1:5432/markdown_development"
}


model User {
  id             String   @id @default(uuid())
  memos          Memo[]
  username       String?  @unique
  passwordDigest String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Memo {
  id                String    @id @default(uuid())
  userId            String
  sections          Section[] // Memo„Åã„ÇâSection„Å∏„ÅÆ‰∏ÄÂØæÂ§ö„ÅÆ„É™„É¨„Éº„Ç∑„Éß„É≥„ÇíËøΩÂä†
  icon              String    @default("üìù")
  title             String    @default("ÁÑ°È°å")
  description       Json      @default("{}")
  position          Int?
  favorite          Boolean   @default(false)
  favoritePosition  Int       @default(0)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  user              User      @relation(fields: [userId], references: [id])

  @@index([userId], name: "index_memos_on_user_id")
}

model Section {
  id         String   @id @default(uuid())
  memoId     String
  title      String   @default("")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  memo       Memo     @relation(fields: [memoId], references: [id])

  @@index([memoId], name: "index_sections_on_memo_id")
}
